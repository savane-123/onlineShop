<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@drawable/ad_background">
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/image_view_frame"/>
			<androidx.cardview.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				app:cardCornerRadius="6dp"
				app:cardElevation="8dp"
				android:layout_marginTop="10dp"
				android:id="@+id/category_card"
				>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:background="@drawable/category_side"
					android:gravity="center_horizontal"
					>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/white"
					android:text="CATEGORIES"
					/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:orientation="horizontal">
					<ImageView
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:id="@+id/img_bike"
						android:background="@drawable/bike"
						android:layout_marginRight="20dp"
						/>
					<ImageView
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:id="@+id/img_car"
						android:background="@drawable/car"
						android:padding="10dp"
						android:layout_marginRight="20dp"
						/>
					<ImageView
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:id="@+id/img_electronic"
						android:background="@drawable/electronic_icon"
						android:layout_marginRight="20dp"
						/>
					<ImageView
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:id="@+id/img_mobile"
						android:background="@drawable/mobile_icon"
						android:layout_marginRight="20dp"
						/>
			</LinearLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardBackgroundColor="@android:color/transparent"
				app:cardCornerRadius="6dp"
				app:cardElevation="5dp"
				android:padding="40dp"
				android:id="@+id/recycl_card"
				>
			<androidx.recyclerview.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="10dp"
				android:id="@+id/item_recycle_view">
			</androidx.recyclerview.widget.RecyclerView>
			</androidx.cardview.widget.CardView>
			</LinearLayout>
	</ScrollView>
</RelativeLayout>