<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/round_border"
	>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_marginTop="-60dp"
		android:layout_marginRight="-20dp"
		android:layout_marginLeft="-20dp"
		android:background="@drawable/top_carve_tow"
		/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="User Name"
		android:id="@+id/full_name"
		android:textColorHint="@color/white"
		android:textSize="14sp"
		android:textColor="@color/white"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="4dp"
		android:layout_marginStart="10dp" />
	<LinearLayout
		android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="left"
		android:layout_marginTop="70dp"
		>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="left"
			>
		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardElevation="5dp"
			android:layout_marginLeft="10dp"
			app:cardBackgroundColor="@color/white"
			app:cardCornerRadius="100dp"
			>
			<com.makeramen.roundedimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/profile_image"
				android:src="@drawable/logo"
				android:scaleType="fitCenter"
				android:layout_height="100dp"
				android:layout_width="100dp"
				app:riv_corner_radius="30dip"
				app:riv_border_width="2dip"
				app:riv_border_color="#333333"
				app:riv_mutate_background="true"
				app:riv_tile_mode="repeat"
				app:riv_oval="true" />
<!--			<ImageView-->
<!--				android:id="@+id/profile_image"-->
<!--				android:layout_width="100dp"-->
<!--				android:layout_height="100dp"-->
<!--				android:layout_gravity="center_horizontal"-->
<!--				android:background="@drawable/logo"-->
<!--				android:gravity="center"-->
<!--				android:padding="8dp"-->
<!--				android:textSize="40sp"-->
<!--				android:textStyle="bold" />-->
		</androidx.cardview.widget.CardView>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Email"
				android:id="@+id/email"
				android:textColorHint="@color/black"
				android:textSize="10sp"
				android:layout_marginTop="4dp"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				 />
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			>
			<androidx.cardview.widget.CardView
				android:layout_width="60dp"
				android:layout_height="60dp"
				app:cardElevation="5dp"
				android:layout_marginTop="24dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="100dp"
				android:layout_marginBottom="10dp"
				>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="2000"
					android:textColorHint="@color/black"
					android:textSize="12sp"
					android:layout_gravity="center"
					android:layout_marginTop="-10dp"
					android:textColor="@color/black"
					android:id="@+id/no_post"
					/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="AD Post"
					android:textColorHint="@color/black"
					android:layout_gravity="center"
					android:textSize="12sp"
					android:layout_marginTop="6dp"
					android:textColor="@color/black"
					/>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			>
			<androidx.cardview.widget.CardView
				android:layout_width="60dp"
				android:layout_height="60dp"
				app:cardElevation="5dp"
				android:layout_marginTop="24dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="100dp"
				android:layout_marginBottom="10dp"
				>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="10"
					android:textColorHint="@color/black"
					android:textSize="12sp"
					android:layout_gravity="center"
					android:layout_marginTop="-10dp"
					android:textColor="@color/black"
					android:id="@+id/no_available"
					/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="Available"
					android:textColorHint="@color/black"
					android:layout_gravity="center"
					android:textSize="12sp"
					android:layout_marginTop="6dp"
					android:textColor="@color/black"
					/>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			>
			<androidx.cardview.widget.CardView
				android:layout_width="60dp"
				android:layout_height="60dp"
				app:cardElevation="5dp"
				android:layout_marginTop="24dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="100dp"
				android:layout_marginBottom="10dp"
				>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="190"
					android:textColorHint="@color/black"
					android:textSize="12sp"
					android:layout_gravity="center"
					android:layout_marginTop="-10dp"
					android:textColor="@color/black"
					android:id="@+id/no_sold"
					/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="Sold"
					android:textColorHint="@color/black"
					android:layout_gravity="center"
					android:textSize="12sp"
					android:layout_marginTop="6dp"
					android:textColor="@color/black"
					/>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
	</LinearLayout>
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="20dp"
			>
			<LinearLayout
				android:padding="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				>
		<Button
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:background="@drawable/edit_button_background"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:textColor="@color/white"
			android:text="Edit Profile"
			android:drawableRight="@drawable/edit_icon"
			android:id="@+id/edit_profile"
			android:textSize="12sp"
			/>
		<LinearLayout
			android:padding="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:background="@drawable/edit_button_background"
			android:layout_marginRight="80dp"
			android:textColor="@color/white"
			android:text="Edit Address"
			android:drawableRight="@drawable/edit_icon"
			android:id="@+id/edit_address"
			android:textSize="12sp"
			/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:background="@drawable/edit_button_background"
			android:textColor="@color/white"
			android:text="Edit Password"
			android:drawableRight="@drawable/edit_icon"
			android:id="@+id/edit_password"
			android:textSize="12sp"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="3.5dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/edit_button_background"
			></LinearLayout>
		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:cardElevation="5dp"
			android:layout_gravity="center_horizontal"
			app:cardBackgroundColor="@color/white"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="4dp"
			app:cardCornerRadius="6dp"
			>
	<LinearLayout
		android:id="@+id/ad_linear"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<FrameLayout
			android:id="@+id/fragment_contenair"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp"
			android:background="@android:color/transparent"
			android:layout_marginBottom="50dp"
			/>
	</LinearLayout>
		</androidx.cardview.widget.CardView>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</RelativeLayout>