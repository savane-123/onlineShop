<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activities.user.UpdatePassword"
	android:background="@drawable/round_border"    >

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_marginTop="-60dp"
		android:layout_marginRight="-20dp"
		android:layout_marginLeft="-20dp"
		android:background="@drawable/top_carve_tow"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">
		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardElevation="5dp"
			android:layout_gravity="center_horizontal"
			app:cardBackgroundColor="@color/white"
			android:layout_marginTop="70dp"
			app:cardCornerRadius="6dp"
			>

			<ImageView
				android:id="@+id/logo"
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/logo"
				android:gravity="center"
				android:padding="8dp"
				android:textSize="40sp"
				android:textStyle="bold" />

		</androidx.cardview.widget.CardView>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:text="Change Password"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:textColor="@color/black"
			/>
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="20dp"
			>
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardElevation="20dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="4dp"
				app:cardCornerRadius="6dp"
				>

				<LinearLayout
					android:layout_marginTop="40dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Old Password"
						android:textColorHint="@color/black"
						android:drawableLeft="@drawable/pswd"
						android:inputType="textPassword"
						android:letterSpacing="0.1"
						android:textSize="16dp"
						android:textColor="@color/black"/>
					<EditText
						android:id="@+id/new_password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="New Password"
						android:textColorHint="@color/black"
						android:drawableLeft="@drawable/pswd"
						android:inputType="textPassword"
						android:letterSpacing="0.1"
						android:textSize="16dp"
						android:textColor="@color/black"/>
					<EditText
						android:id="@+id/conform_password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Conform Password"
						android:textColorHint="@color/black"
						android:drawableLeft="@drawable/pswd"
						android:inputType="textPassword"
						android:letterSpacing="0.1"
						android:textSize="16dp"
						android:textColor="@color/black"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:id="@+id/success_msg"
						android:text="password has been updated successfully"
						android:layout_gravity="center_horizontal"
						android:gravity="center_horizontal"
						android:textColor="@color/green"
						android:drawableRight="@drawable/done_icon"
						android:layout_marginTop="20dp"
						android:visibility="gone"
						/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:id="@+id/error_msg"
						android:text="error password not update"
						android:layout_gravity="center_horizontal"
						android:gravity="center_horizontal"
						android:textColor="@color/red"
						android:visibility="gone"
						android:drawableRight="@drawable/cancel_icon"
						android:layout_marginTop="20dp"
						/>
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardElevation="20dp"
						android:layout_marginLeft="10dp"
						android:layout_marginBottom="20dp"
						android:layout_gravity="center_horizontal"
						app:cardBackgroundColor="@color/white"
						android:layout_marginTop="10dp"
						android:layout_marginRight="10dp"
						app:cardCornerRadius="6dp"
						>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_gravity="center_horizontal"
							android:gravity="center_horizontal"
							android:layout_marginTop="20dp"
							android:layout_marginBottom="20dp"
							android:orientation="vertical"
							>
							<Button
								android:id="@+id/change"
								android:layout_width="240dp"
								android:layout_height="40dp"
								android:background="@drawable/edit_button"
								android:textAlignment="center"
								android:drawableRight="@drawable/edit_icon"
								android:layout_gravity="center"
								android:textSize="18sp"
								android:text="Change"
								android:textColor="@color/white"/>
						</LinearLayout>
					</androidx.cardview.widget.CardView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</ScrollView>
	</LinearLayout>
</RelativeLayout>